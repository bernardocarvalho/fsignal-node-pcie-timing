<!DOCTYPE hardware SYSTEM "Hardware.dtd">

<hardware   uniqueID="BOARD_1">
    <name xml:lang="en">Timing Board 1</name>
    <description xml:lang="en">KX1 Timing Board 1</description>
    <field  uniqueID="DELAY_TIME_10NS"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Trigger Delay(10 nsec)</name>
        <description xml:lang="en">The channel trigger delay in 10 n-seconds units</description>
        <type>
            <continuous primitive="int">
                <min>1</min>
                <max>4294967295</max>
                <step>1</step>
                <defaultValue>20000000</defaultValue>
            </continuous>
        </type>
    </field>
    <field  uniqueID="PERIOD_TIME_10NS"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Pulse Width (10 nsec)</name>
        <description xml:lang="en">The channel trigger delay in nano seconds</description>
        <type>
            <continuous primitive="int">
                <min>0</min>
                <max>4294967295</max>
                <step>1</step>
                <defaultValue>10000</defaultValue>
            </continuous>
        </type>
    </field>
    <field  uniqueID="CHANNEL_MODE"
            editable="true"
            emptyAllowed="false"
            hardwareField="no">
        <name xml:lang="en">Channel Mode</name>
        <description xml:lang="en">The type of trigger to use</description>
        <type>
            <list>
                <element>Trigger</element>
                <element>Pulse</element>
                <element>PulseTrain</element>
                <defaultValue>Trigger</defaultValue>
            </list>
        </type>
    </field>
    <field  uniqueID="CONFIG"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Config</name>
        <description xml:lang="en">The channel config word</description>
        <type>
            <continuous primitive="int">
                <min>0</min>
                <max>4294967295</max>
                <step>1</step>
                <defaultValue>0</defaultValue>
            </continuous>
        </type>
    </field>
