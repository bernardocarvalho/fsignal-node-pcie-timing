<!DOCTYPE hardware SYSTEM "Hardware.dtd">

<hardware   uniqueID="BOARD_1">
    <name xml:lang="en">Timing Board 1</name>
    <description xml:lang="en">KX1 Timing Board 1</description>
    <field  uniqueID="DELAY_TIME"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Trigger Delay</name>
        <description xml:lang="en">The channel trigger delay</description>
        <type>
            <continuous primitive="int">
                <min>-2147483647</min>
                <max>2147483648</max>
                <step>1</step>
                <defaultValue>0</defaultValue>
            </continuous>
        </type>
    </field>
    <field  uniqueID="DELAY_MULTIPLIER_UNIT"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Delay Units</name>
        <description xml:lang="en">The units in which the delay value (all channels on the Hardware).</description>
        <type>
            <list>
                <element>100 ns</element>
                <element>us</element>
                <element>ms</element>
                <element>s</element>
                <defaultValue>100 ns</defaultValue>
            </list>
        </type>
    </field>
    <field  uniqueID="PERIOD_TIME_100NS"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Pulse Width (100 nsec)</name>
        <description xml:lang="en">The Pulse period in 100 nano sec units</description>
        <type>
            <continuous primitive="int">
                <min>0</min>
                <max>4294967295</max>
                <step>1</step>
                <defaultValue>10000</defaultValue>
            </continuous>
        </type>
    </field>
    <field  uniqueID="NUM_PULSES"
        editable="true"
        emptyAllowed="false"
        hardwareField="no">
        <name xml:lang="en">Number of Pulses in Pulse Train Mode</name>
        <description xml:lang="en">The number of Pulses in Pulse Train Mode</description>
        <type>
            <continuous primitive="int">
                <min>0</min>
                <max>33554432</max>
                <step>1</step>
                <defaultValue>1</defaultValue>
            </continuous>
        </type>
    </field>
    <field  uniqueID="CHANNEL_MODE"
            editable="true"
            emptyAllowed="false"
            hardwareField="no">
        <name xml:lang="en">Channel Mode</name>
        <description xml:lang="en">The type of trigger to use</description>
        <type>
            <list>
                <element>Reset</element>
                <element>Trigger</element>
                <element>Square</element>
                <element>PulseTrain</element>
                <defaultValue>Trigger</defaultValue>
            </list>
        </type>
    </field>
    <field  uniqueID="CHANNEL_INVERT"
            editable="true"
            emptyAllowed="false"
            hardwareField="no">
        <name xml:lang="en">Channel Invert</name>
        <description xml:lang="en">The state of output channel</description>
        <type>
            <list>
                <element>NoInvert</element>
                <element>Invert</element>
                <defaultValue>NoInvert</defaultValue>
            </list>
        </type>
    </field>
